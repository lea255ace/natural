{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "warnOnUnsupportedTypeScriptVersion": false
  },
  "rules": {
    "indent": ["warn", 4],
    "quotes": ["warn", "single"],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  }
}